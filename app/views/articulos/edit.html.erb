<h1>Edición Articulo</h1>
<%= form_with(model: @articulo, local: true) do |form| %>
    <% if @articulo.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@articulo.errors.count, "error") %> Prohibido,
                Este artículo no puede ser editado:
            </h2>
            <ul>
                <% @articulo.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    
    <p>
        <%= form.label :Titulo %><br>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :Texto %><br>
        <%= form.text_area :text %>
    </p>

    <p>
        <%= form.submit "Guardar" %>
    </p>
    <%= link_to 'Regresar', articulos_path %>
<% end %>